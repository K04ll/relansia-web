{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },
    "plugins": [{ "name": "next" }],
    "esModuleInterop": true,
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "next-env.d.ts",
    "app/**/*",
    "components/**/*",
    "emails/**/*",
    "lib/**/*",
    "tests/**/*",
    "tests-e2e/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

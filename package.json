{
  "name": "relansia-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ci": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:a11y": "axe http://localhost:3000",
    "test:perf": "lighthouse http://localhost:3000 --view --output html --output-path ./docs/lh-report.html",
    "gen:dryrun": "curl -s -X POST http://localhost:3000/api/reminders/generate -H 'Content-Type: application/json' -d '{\"dry_run\":true,\"limit_clients\":25}' | jq",
    "gen:all": "curl -s -X POST http://localhost:3000/api/reminders/generate -H 'Content-Type: application/json' -d '{\"dry_run\":false}' | jq",
    "dispatch:local": "curl -s -X POST http://localhost:3000/api/reminders/dispatch -H \"Authorization: Bearer ${CRON_SECRET}\" | jq",
    "prepare": "node -e \"process.exit(0)\""
  },
  "dependencies": {
    "@react-email/render": "^1.2.1",
    "@supabase/supabase-js": "^2.56.0",
    "csv-parse": "^6.1.0",
    "framer-motion": "^12.23.12",
    "libphonenumber-js": "^1.12.14",
    "lucide-react": "^0.541.0",
    "luxon": "3.4.4",
    "next": "15.4.6",
    "openai": "^5.12.2",
    "papaparse": "^5.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "resend": "^6.0.1",
    "twilio": "^5.8.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "lighthouse": "^12.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.1"
  }
}
